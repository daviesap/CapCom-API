{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "serviceAccount": "generatepdf@flair-pdf-generator.iam.gserviceaccount.com"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": [
    {
      "site": "flair-pdf-generator",
      "public": "frontend/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "site": "api-capcom-london",
      "rewrites": [
        {
          "source": "/**",
          "function": {
            "functionId": "v2",
            "region": "europe-west2"
          }
        }
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}